<h3>以下の内容で送信する。</h3>

<% if @blog.errors.any? %>
  <div id="error_explanation">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
    <p>つぶやき:<%= @blog.content %></p>
  <%= form.submit  "ツイートする" %>
<% end %>

<div class="link">
  <%= link_to 'TOPへ戻る', new_blog_path %>
</div>
